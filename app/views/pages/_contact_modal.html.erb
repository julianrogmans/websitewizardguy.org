<div class="modal fade" id="contact" tabindex="-1" role="dialog" aria-labelledby="contactModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" data-dismiss="modal" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h1 class="modal-title">Contact</h1>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-10 col-sm-offset-1">
            <%= form_tag(contact_path) do %>
              <div class="form-group">
                <%= label_tag(:name) %>
                <%= text_field_tag(:name, nil, :class => 'form-control') %>
              </div>
              <div class="form-group">
                <%= label_tag(:email) %>
                <%= email_field_tag(:email, nil, :class => 'form-control') %>
              </div>
              <div class="form-group">
                <%= label_tag(:message) %>
                <%= text_area_tag(:message, nil, size: "x12", :class => 'form-control') %>
              </div>
              <div class="form-group text-center">
                <%= submit_tag('Contact', :class => 'btn btn-lg btn-success') %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>